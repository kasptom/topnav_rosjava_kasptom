<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="com.github.topnav_rosjava_kasptom.components.topnav_navigator.view.GuidelineView"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <HBox spacing="10"
          alignment="CENTER"
          GridPane.columnIndex="1"
          GridPane.rowIndex="1">
        <Button text="Look ahead"
                onAction="#onLookAhead"/>
    </HBox>

    <HBox spacing="10"
          GridPane.columnIndex="1"
          GridPane.rowIndex="2">
        <Button text="Look left"
                onAction="#onLookLeft"/>

        <Button text="Look right"
                onAction="#onLookRight"/>
    </HBox>

    <HBox spacing="10"
          alignment="CENTER"
          GridPane.columnIndex="1"
          GridPane.rowIndex="3">
        <Button text="Look back"
                onAction="#onLookBack"/>
    </HBox>

    <ChoiceBox
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            onAction="#onStrategySelect"
            fx:id="strategiesSelector">
        <items>
            <FXCollections
                    fx:factory="observableArrayList">
            </FXCollections>
        </items>
    </ChoiceBox>

    <HBox GridPane.columnIndex="1"
          GridPane.rowIndex="6">
        <ChoiceBox
                fx:id="parametersSelector">
            <items>
                <FXCollections
                        fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ChoiceBox>
        <Button onAction="#onAddClicked">+</Button>
        <Button onAction="#onRemoveClicked">-</Button>
    </HBox>

    <HBox spacing="10" alignment="bottom_center"
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Label text="Add parameters">
        </Label>
    </HBox>

    <VBox GridPane.columnIndex="1" GridPane.rowIndex="7"
          fx:id="strategyParamsContainer">
    </VBox>

    <HBox spacing="10" alignment="bottom_center"
          GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button text="Start strategy"
                fx:id="buttonStartStrategy"
                onAction="#onStartStrategy"/>

        <Button text="Stop strategy"
                fx:id="buttonStopStrategy"
                onAction="#onStopStrategy"/>
    </HBox>

</GridPane>
