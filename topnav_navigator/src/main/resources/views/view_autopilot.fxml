<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.github.topnav_rosjava_kasptom.components.autopilot.view.AutopilotView"
          prefWidth="680.0"
          prefHeight="120.0"
          hgap="10"
          vgap="10">

    <VBox GridPane.columnIndex="1"
          GridPane.rowIndex="1"
          spacing="10">
        <HBox alignment="BASELINE_CENTER">
            <Label textFill="white"
                   prefWidth="110">Start marker
            </Label>
            <TextField alignment="BASELINE_RIGHT"
                       prefWidth="40"
                       fx:id="txtFieldStartMarker"/>
        </HBox>
        <HBox alignment="BASELINE_CENTER">
            <Label textFill="white"
                   prefWidth="110">End marker
            </Label>
            <TextField
                    alignment="BASELINE_RIGHT"
                    prefWidth="40"
                    fx:id="txtFieldEndMarker"/>
        </HBox>
        <HBox spacing="10">
            <Button>Play</Button>
            <Button>Pause</Button>
            <Button>Stop</Button>
        </HBox>
    </VBox>

    <HBox GridPane.columnIndex="3"
          GridPane.rowIndex="1"
          spacing="10">
        <VBox spacing="10">
            <Label textAlignment="CENTER"
                   textFill="white">Current guideline
            </Label>
            <Button>Show graph</Button>
        </VBox>
        <TextArea fx:id="txtAreaCurrentGuideline"
                  prefWidth="330"
                  maxHeight="80">
        </TextArea>
    </HBox>
</GridPane>